# Example Environment Configuration

# Server Configuration
PORT=3000
HOST=localhost

# CORS Configuration
CORS_ORIGIN=*

# Storage Paths (relative to project root)
# These are created automatically if they don't exist
# STORAGE_PATH=./storage
# PACKAGES_PATH=./storage/packages
# UPLOADS_PATH=./storage/uploads
# DATABASE_PATH=./storage/db

# Database Configuration
# DB_FILENAME=scorm.db

# SCORM Configuration
# MAX_PACKAGE_SIZE=524288000  # 500MB in bytes
# ALLOWED_EXTENSIONS=.zip

# Sync Configuration
# SYNC_BATCH_SIZE=100
# SYNC_MAX_RETRIES=3
# SYNC_RETRY_DELAY=5000  # milliseconds

# Logging
# LOG_LEVEL=info

# External LMS Integration (optional)
# LMS_API_URL=https://your-lms.com/api
# LMS_API_KEY=your_api_key_here
# LMS_API_SECRET=your_api_secret_here

# Session Configuration
# SESSION_SECRET=your_random_secret_key_here
# SESSION_TIMEOUT=3600  # seconds
